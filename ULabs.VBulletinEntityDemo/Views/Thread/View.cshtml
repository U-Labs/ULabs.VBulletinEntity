@model KeyValuePair<VBThread, List<VBPost>>
@{
    var thread = Model.Key;
    var replys = Model.Value;
}
<div>
    <h1>@thread.Title</h1>
    <code>@thread.FirstPost.Text</code>
</div>

<div style="margin-top:20px">@replys.Count  replys</div>

<div style="margin-left:30px">
    @foreach(var reply in replys) {
        <div style="margin-top:30px">@reply.Text</div>
    }
</div>